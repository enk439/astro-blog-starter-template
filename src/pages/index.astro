<style>
main.home {
	width: 200%;
	max-width: 200px;
	margin: 4rem auto;
	padding: 0 1rem;

	transform: scale(0.5);
	transform-origin: top center;
}


	/* Layout container */
	.intro {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 3rem;
	}

	/* Text column */
	.intro-text {
		max-width: 400px;
	}

	/* Profile image */
	.profile-pic {
		width: 220px;
		height: 220px;
		border-radius: 50%;
		object-fit: cover;
		flex-shrink: 0;
	}

	/* Mobile layout */
	@media (max-width: 768px) {
		.intro {
			flex-direction: column-reverse;
			text-align: center;
		}

		.profile-pic {
			margin-bottom: 1.5rem;
		}
	}
</style>
